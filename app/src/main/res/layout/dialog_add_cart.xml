<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppBottomSheetDialogTheme"
    android:orientation="vertical">
    <View
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/gray"/>

    <TextView
       android:layout_gravity="center"
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TO CART"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/green" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <ImageView

            android:layout_gravity="left"
            android:id="@+id/iv_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_add_file"
            />
        <TextView
            android:id="@+id/txt_soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/number_button"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="Số lượng: "/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/number_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            app:backGroundColor="@color/green"
            app:finalNumber="20"
            app:initialNumber="1"
            app:textSize="8sp"/>
    </RelativeLayout>



    <EditText
        android:id="@+id/edtNameFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:hint="Food name"
        android:enabled="false"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/overlay_color"
        android:background="@drawable/btn_custom2"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edtPriceFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:hint="Food price"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:enabled="false"
        android:textSize="20sp"
        android:textColorHint="@color/overlay_color"
        android:background="@drawable/btn_custom2"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">


    </LinearLayout>

    <Button
        android:background="@drawable/bg_button"
        android:id="@+id/btnAddCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Cart"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>